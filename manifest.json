{
    "manifest_version": 3,
    "name": "Weather Now",
    "version": "1.0.0",
    "description": "Chrome Extension to check current weather using your real-time location and WeatherAPI.com",
    "icons": {
        "128": "icons/icon.png"
    },
    "permissions": [
        "geolocation",
        "storage"
    ],
    "host_permissions": [
        "https://api.weatherapi.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}